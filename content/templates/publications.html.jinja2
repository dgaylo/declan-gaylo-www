{% macro publication_card(title, citation, link, pdf) -%}
<div class="card mb-3">
    <div class="card-body">
        <div class="row g-0">
            <div class="col-lg-9">
                <h3 class="h5 card-title">{{title}}</h3>
                <p class="card-subtitle text-muted"><small>{{citation}}</small></p>
            </div>
            <div class="col-lg-3 d-flex align-items-center justify-content-end">
                <div class="d-block gap-2 ">
                    {%if link%}<a href="{{link}}" class="btn btn-outline-primary">Read Online</a>{%endif%}
                    {%if  pdf%}<a href="{{pdf}}"  class="btn btn-outline-primary">Download <span class="pdf-download-icon"></span></a>{%endif%}
                </div>
            </div>
        </div>
    </div>
</div>
{%- endmacro %}

{% macro journal_article(authors, year, title, journal, volume, pages, doi, pdf) -%}
    {{ publication_card(
        title=title,
        citation= year + ". " + authors + ". <em>" + journal + ", " + volume+"</em>, " + pages,
        link = "https://doi.org/"+doi,
        pdf = pdf
    )}}
{%- endmacro %}

{% macro conference_presentation(authors, year, month, title, conference, city, state, link, pdf) -%}
    {{ publication_card(
        title=title,
        citation = year + ", " + month + ". " + authors +". Presented at the " + conference + ", " + city + ", " + state + ".",
        link = link,
        pdf = pdf
    )}}
{%- endmacro %}

{% macro thesis(authors, year, title, type, school, city, state, link, pdf) -%}
    {{ publication_card(
        title=title+" ("+ type + ")",
        citation = year + ". " + authors +". " + school + ", " + city + ", " + state + ".",
        link = link,
        pdf = pdf
    )}}
{%- endmacro%}
