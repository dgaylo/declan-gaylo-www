{% macro eductation_item(degree, school, year, blurb, school_link, seal, flip) -%}
        <div class="row py-3">
            <div class="col-3 col-md-2{% if flip %}{% else %} order-md-2{% endif %}">
                <a href="{{school_link}}" target="_blank"><img src="{{seal}}" alt="{{school}} Seal" class="img-fluid"></a>
            </div>
            <div class="col-12 col-md-10">
                <div class="degree-name"><h2>{{degree}}, <a href="{{school_link}}" target="_blank">{{school}}</a>, {{year}}</h2></div>
                <div class="degree-info">
                        {{ blurb }}
                </div>
            </div>
        </div>
{%- endmacro %}