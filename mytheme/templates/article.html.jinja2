{% extends "includes/base.html.jinja2" %}

{% block title %}{{ article.title|striptags  }} - {{ SITENAME }}{% endblock %}

{% block canonical_rel %}
  <link rel="canonical" href="{{ SITEURL }}/{{ article.url }}">
{% endblock %}

{% block meta %}
  {% if article.author %}
  <meta name="author" content="{{ article.author }}">
  {% else %}
  <meta name="author" content="{{ AUTHOR }}">
  {% endif %}
  {% if article.description %}
  <meta name="description" content="{{article.description}}">
  {% endif %}
  {% for tag in article.tags %}
  <meta name="tags" content="{{tag}}">
  {% endfor %}
{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="{{ SITEURL }}/">Home</a></li>
  <li class="breadcrumb-item"><a href="{{ SITEURL }}/{{article.category}}">{{ article.category | capitalize }}</a></li>
  <li class="breadcrumb-item active">{{article.slug | capitalize}}</li>
</ol>
{% endblock %}

{% block content %}
  <section id="content">
    <article>
      <header class="page-header">
        <h1 class="article-title">
          <a href="{{ SITEURL }}/{{ article.url }}"
          rel="bookmark"
          title="Permalink to {{ article.title|striptags }}">
          {{ article.title }}
          </a>
        </h1>
      </header>
      <div class="entry-content">
        {{ article.content }}
      </div>
    </article>
  </section>
{% endblock %}